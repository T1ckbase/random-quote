{
  "tasks": {
    "dev": "deno run --watch --allow-all --env-file=.env main.tsx"
  },
  "imports": {
    "hono": "jsr:@hono/hono@^4.10.7"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 160,
    "proseWrap": "preserve",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "lock": false
}
